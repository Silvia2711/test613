    const email = getQueryParam('email');
    const statusEl = document.getElementById('status');

    if (!email || !accessTable[email]) {
      statusEl.textContent = 'âš ï¸ æ‰¾ä¸åˆ°ä½ çš„é©—è­‰è³‡æ–™å–”ï¼Œè«‹ç¢ºèªä½ æœ‰å¡«å¯«å•å·ï¼';
